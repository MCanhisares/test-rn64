{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": [
      "src"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@main": ["main"],
      "@main/*": ["main/*"], 
      "@ds": ["common/design-system"],
      "@ds/*": ["common/design-system/*"],
      "@common": ["common"],
      "@common/*": ["common/*"],
      "@resources": ["resources"],
      "@resources/*": ["resources/*"]  
    },
    "baseUrl": "src",
    "resolveJsonModule": true,
    "types": ["@types/jest"]
  },
}
